#!/usr/bin/env node

var f5=require("../lib/f5"),
    path = ".",
    port = 3000;

var task = require('../lib/task');

var init = function(){
    var argvs = process.argv;
    if (argvs[1] == "runtask") {
        task.runtasks();
        return;
    } else {
        port = parseInt(argvs[argvs.length - 1]) || port;

        f5.createServer({
            path:path,
            port:port
        });
    }
};

init();
